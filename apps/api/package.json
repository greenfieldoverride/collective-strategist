{
  "name": "@collective-strategist/api",
  "version": "1.0.0",
  "description": "The Collective Strategist API - Content creation and social media management backend",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "npm run db:migrate && node dist/index.js",
    "start:no-migrate": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:performance": "tsx src/__tests__/performance/run-performance-tests.ts",
    "db:migrate": "node dist/scripts/migrate.js",
    "db:seed": "node -r tsx/cjs dist/scripts/seed.js"
  },
  "dependencies": {
    "@collective-strategist/events": "file:../../shared/events",
    "@collective-strategist/types": "file:../../shared/types",
    "@fastify/cors": "^8.4.0",
    "@fastify/jwt": "^7.2.0",
    "@fastify/multipart": "^8.0.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@lemonsqueezy/lemonsqueezy.js": "^4.0.0",
    "@types/stripe": "^8.0.416",
    "@types/uuid": "^10.0.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^17.2.3",
    "fastify": "^4.24.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.0",
    "pino": "^8.16.0",
    "prom-client": "^15.1.0",
    "redis": "^4.6.0",
    "stripe": "^19.1.0",
    "ulid": "^2.3.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.0.0"
  }
}
