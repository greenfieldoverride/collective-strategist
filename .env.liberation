# Liberation Stack Environment Configuration
# Copy this to .env and customize for your deployment

# ======================
# DATABASE CONFIGURATION
# ======================
POSTGRES_USER=liberation
POSTGRES_PASSWORD=liberation123
POSTGRES_DB=liberation_main

# ======================
# LIBERATION SERVICE PORTS
# ======================
LIBERATION_GUARDIAN_PORT=8080
LIBERATION_AI_PORT=8081
LIBERATION_AUTH_PORT=8082

# ======================
# MONITORING STACK
# ======================
GRAFANA_ADMIN_PASSWORD=liberation123
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
SENTRY_PORT=9000

# ======================
# DEVELOPMENT TOOLS
# ======================
ADMINER_PORT=8083
REDIS_COMMANDER_PORT=8084

# ======================
# EXTERNAL SERVICES
# ======================
# Replace with your actual tokens
GITHUB_TOKEN=your_github_token_here
WEBHOOK_SECRET=your_webhook_secret_here_32_chars_min

# ======================
# AI CONFIGURATION
# ======================
# Choose AI provider: anthropic, openai, google, local
AI_PROVIDER=local
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here
GOOGLE_AI_API_KEY=your_google_key_here

# ======================
# LIBERATION AI SETTINGS
# ======================
VECTOR_STORE_TYPE=memory
VECTOR_DIMENSIONS=384
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ======================
# SECURITY SETTINGS
# ======================
JWT_SECRET_KEY=generated_automatically
RATE_LIMIT_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ======================
# OPERATIONAL SETTINGS
# ======================
LOG_LEVEL=info
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
ENVIRONMENT=development