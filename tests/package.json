{
  "name": "@collective-strategist/tests",
  "version": "0.1.0",
  "description": "Test suite for The Collective Strategist",
  "scripts": {
    "test": "jest",
    "test:unit": "jest unit/",
    "test:integration": "jest integration/",
    "test:performance": "jest performance/",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "redis": "^4.6.0",
    "zod": "^3.22.0",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "../shared/**/*.ts",
      "../services/**/*.ts",
      "!**/*.d.ts",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}